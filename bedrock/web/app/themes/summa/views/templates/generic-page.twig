{% extends "base.twig" %}
{% block content %}
<main class="bg-dark">
    <div class="content-container m-auto bg-light shadow d-flex flex-column" style="height: 100%!important;">
        <div class="content-padding">
            <h1 class="p-2 p-sm-4">{{ wp.posts.0.post_title }}</h1>
            <hr>
            <div class="p-2 p-sm-4">
                {{ wp.posts.0.post_content}}
            </div>
        </div>
        <div class="d-flex justify-content-between footer-picture pt-5">
            <img src="{{ webInfo.baseurl }}app/themes/summa/assets/img/logo/summa_pre_logo.png" class="d-none d-md-block align-self-end" height="50" width="auto" style="margin-bottom: 0!important;">
            <img src="{{ webInfo.baseurl }}app/themes/summa/assets/img/thomas_kopf.png" class="d-none d-md-block" height="150" width="auto">
        </div>
    </div>
</main>


{% endblock %}
