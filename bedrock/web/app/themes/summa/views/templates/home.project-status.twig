<div id="project-status" class="status-box align-self-center d-flex flex-column w-100 content-padding">
    <div class="progress mt-3">
        <div class="progress-bar bg-summa-primary" role="progressbar" style="width: {{ count.wip }}%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="000"></div>
    </div>
    <span class="pt-3">{{ count.wip }}% der Questiones sind in Übersetzung</span>
    <div class="progress mt-3">
        <div class="progress-bar bg-summa-primary" role="progressbar" style="width: {{ count.completed }}%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <span class="pt-3">{{ count.completed }}% der Questiones sind übersetzt und veröffentlicht</span>

    <ul class="list-group list-group-horizontal-md mt-5 w-100">
        <li class="list-group-item w-25-md">
            <h2 id="book-count" class="text-center"
                hx-get="{{ webInfo.baseurl }}book-count"
                hx-trigger="load"
                hx-swap="outerHTML">
                <div class="spinner-border text-summa-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </h2>
            <h5 class="text-center">Bücher</h5>
        </li>
        <li class="list-group-item w-25-md">
            <h2 id="chapter-count" class="text-center"
                hx-get="{{ webInfo.baseurl }}chapter-count"
                hx-trigger="load"
                hx-swap="outerHTML">
                <div class="spinner-border text-summa-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </h2>
            <h5 class="text-center">Questiones</h5>
        </li>
        <li class="list-group-item w-25-md">
            <h2 id="article-count" class="text-center"
                hx-get="{{ webInfo.baseurl }}article-count"
                hx-trigger="load"
                hx-swap="outerHTML">
                <div class="spinner-border text-summa-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </h2>
            <h5 class="text-center">Articuli</h5>
        </li>
        <li class="list-group-item w-25-md">
            <h2 id="translator-count" class="text-center"
                hx-get="{{ webInfo.baseurl }}translator-count"
                hx-trigger="load"
                hx-swap="outerHTML">
                <div class="spinner-border text-summa-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </h2>
            <h5 class="text-center">Übersetzer<sup>*</sup>innen</h5>
        </li>
    </ul>

</div>

